<h1>Listing logs for investigation <%= @investigation.name %></h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Data type</th>
    <th>File</th>
    <th>Time bias</th>
    <th>Log messages</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @logs.each do |log| %>
  <tr>
    <td><%= log.name %></td>
    <td><%= log.description %></td>
    <td><%= log.data_type %></td>
    <td><%= log.file %></td>
    <td><%= log.time_bias %></td>
    <td><%= log.log_messages.count %></td>
    <td><%= link_to 'Show', log %></td>
    <td><%= link_to 'Edit', edit_log_path(log) %></td>
    <td><%= link_to 'Destroy', log, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Log', new_investigation_log_path(@investigation) %>
