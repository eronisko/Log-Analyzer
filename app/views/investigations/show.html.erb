<%= show_notice %>
<p>
  <b>Name:</b>
  <%= @investigation.name %>
</p>

<p>
  <b>Description:</b>
  <%= @investigation.description %>
</p>
<%= link_to 'Edit description', edit_investigation_path(@investigation) %>
<hr class="space">
<h5>Listing logs for investigation <%= @investigation.name %></h5>
<% if @investigation.logs.any? %> 
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Data type</th>
    <th>File</th>
    <th>Time bias</th>
    <th>Log messages</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <%= render(@investigation.logs) %>
</table>
<% else %>
  <%= content_tag :p, content_tag(:em, "Uploaded logs will be shown here.") %> 
<% end %>

<%= link_to 'Add a new log', new_investigation_log_path(@investigation) %>
